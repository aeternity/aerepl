%% -*- mode: erlang; indent-tabs-mode: nil -*-

{erl_opts, [debug_info]}.
{minimum_otp_vsn, "22.3.4.9"}.

{plugins, [ { rebar_localdep
            , { git, "https://github.com/alinpopa/rebar3-localdep-plugin.git"
              , {branch, "master"}
              }
            }
          ]}.
{deps,
 [ { aesophia
   , { git, "https://github.com/aeternity/aesophia.git"
     , {tag, "v7.4.0"}
     }
   }
 , { aeserialization
   , { git, "https://github.com/aeternity/aeserialization.git"
     , {tag, "v1.0.0"}
     }
   }
 , { aebytecode
   , { git, "https://github.com/aeternity/aebytecode.git"
     , {tag, "v3.3.0"}
     }
   }

 , { aeprimop, {localdep, "node/apps/aeprimop"} }
 , { aefate, {localdep, "node/apps/aefate"} }
 , { aecore, {localdep, "node/apps/aecore"} }
 , { aecontract, {localdep, "node/apps/aecontract"} }
 , { aeutils, {localdep, "node/apps/aeutils"} }
 , { aechannel, {localdep, "node/apps/aechannel"} }
 , { aetx, {localdep, "node/apps/aetx"} }
 , { aens, {localdep, "node/apps/aens"} }
 , { aeoracle, {localdep, "node/apps/aeoracle"} }

 , { app_ctrl
   , { git, "https://github.com/aeternity/app_ctrl.git"
     , {ref, "c1fb927"}
     }
   }
 , { base58
   , { git, "https://github.com/aeternity/erl-base58.git"
     , {ref,"60a3356"}
     }
   }
 , { enacl
   , { git, "https://github.com/aeternity/enacl.git"
     , {ref, "67fceef"}
     }
   }
 , { jsx
   , { git, "https://github.com/talentdeficit/jsx.git"
     , {ref, "3074d48"}
     }
   }
 , { lager
   , { git, "https://github.com/erlang-lager/lager.git"
     , {ref, "fae5339"}
     }
   }
 , { sha3
   , { git, "https://github.com/aeternity/erlang-sha3"
     , {ref, "b5f27a2"}
     }
   }
 , { ecrecover
   , { git, "https://github.com/aeternity/ecrecover.git"
     , {ref, "ce4175e"}
     }
   }
 , { emcl
   , { git, "https://github.com/aeternity/emcl.git"
     , {ref, "e988f69"
       }
     }
   }

 , { aeminer
   , { git, "https://github.com/aeternity/aeminer.git"
     , {ref, "c6b6a6d"}
     }
   }

 , { exometer_core
   , "1.6.0"
   }
 , { trace_runner
   , {git, "https://github.com/uwiger/trace_runner.git"
     , {ref, "1acb6e56"}
     }
   }
 ]}.

{overrides,
  [ {add, aebytecode, [{erl_opts, [{d, 'EQC'}]}]}
  , {add, aetx, [{erl_opts, [{d, 'TEST'}]}]}
  , {add, aefate, [{erl_opts, [{d, 'DEBUG_INFO'}]}]}
  , {add, aecontract, [{pre_hooks, [{compile, "touch ../../VERSION"}]}]}
  ]}.

{relx, [{release, {aerepl, "3.2.0"},
         [ {exometer_core, load}
         , {aeminer, load}
         , {mnesia, load}
         , sasl
         , {aeprimop, load}
         , {aefate, load}
         , {aecontract, load}
         , {aechannel, load}
         , {aecore, load}
         , {aeutils, load}
         , {aetx, load}
         , {aesophia, load}
         , {aeserialization, load}
         , {aebytecode, load}
         ]},
        {lib_dirs, ["node/_build/dev1/rel/aeternity/lib/", "_build/prod/lib/"]},
        {dev_mode, true},
        {vm_args, "config/vm.args"},
        {sys_config, "config/sys.config"},
        {include_erts, false},
        {extended_start_script, true},
        {extended_start_script_extensions, [
              {check_config, "extensions/check_config"},
              {keys_gen, "extensions/keys_gen"},
              {peer_key, "extensions/peer_key"},
              {export, "extensions/export_chain"},
              {messages_hash, "extensions/messages_hash"}
        ]}
       ]}.

{pre_hooks,  []}.

{post_hooks, []}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]}
           ]}.

{dialyzer, [ {warnings, [unknown, underspecs, no_return]}
           , {plt_extra_apps, []}
           , {plt_apps, all_deps}
           , {base_plt_apps, [erts, kernel, stdlib, crypto]}
           ]}.
