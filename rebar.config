%% -*- mode: erlang; indent-tabs-mode: nil -*-

{erl_opts, [debug_info]}.
{minimum_otp_vsn, "22.3.4.9"}.

{deps, [{aesophia, {git, "https://github.com/aeternity/aesophia.git",
                    {ref, "75cf100"}}},
        {aeserialization, {git, "https://github.com/aeternity/aeserialization.git",
                           {ref,"eb68fe3"}}},
        {aebytecode, {git, "https://github.com/aeternity/aebytecode.git",
                      {ref, "69a1c41"}}},
        {app_ctrl, {git, "https://github.com/aeternity/app_ctrl.git",
                    {ref, "c1fb927"}}},
        {base58, {git, "https://github.com/aeternity/erl-base58.git",
                  {ref,"60a3356"}}},
        {enacl, {git, "https://github.com/aeternity/enacl.git",
                 {ref, "67fceef"}}},
        {jsx, {git, "https://github.com/talentdeficit/jsx.git",
               {ref, "3074d48"}}},
        {lager, {git, "https://github.com/erlang-lager/lager.git",
                 {ref, "fae5339"}}},
        {sha3, {git, "https://github.com/aeternity/erlang-sha3",
                {ref, "b5f27a2"}}}
       ]}.

{overrides,
  [{add, aebytecode, [{erl_opts, [{d, 'EQC'}]}]
}]}.

{relx, [{release, {aerepl, "2.3.0"},
         [aerepl, {aechannel, load}, {aecore, load}, {aeutils, load}, {mnesia, load}, sasl]},
        {lib_dirs, ["node/_build/dev1/rel/aeternity/lib", "_build/prod/lib/"]},
        {dev_mode, true},
        {vm_args, "config/vm.args"},
        {sys_config, "config/sys.config"},
        {include_erts, false},
        {extended_start_script, true},
        {extended_start_script_extensions, [
              {check_config, "extensions/check_config"},
              {keys_gen, "extensions/keys_gen"},
              {peer_key, "extensions/peer_key"},
              {export, "extensions/export_chain"},
              {messages_hash, "extensions/messages_hash"}
        ]}
       ]}.

{pre_hooks, [ {"(linux|darwin|solaris|freebsd|netbsd|openbsd)",
               compile,
               "./link_apps.bash"
              }
            ]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]}
           ]}.
